doctype html
html
  head
    title= title
    link(rel='stylesheet' href='/stylesheets/style.css')
  body
    block nav
      nav 
        ul(style="display:flex;gap:70px;list-style:none;padding:0;font-size:1.1rem;") 
          each link in ["", "Items", "Categories"]
            li
              a(href="/shop/" + link.toLowerCase()) #{link === "" ? "Home" : link}
    block content


