extends layout 

block content 

  h1 Category: #{category.name}

  div(style="margin-left:20px;margin-top:20px;")

    h2(style="font-size:0.9rem;") #{category.description}

    dl 
      each item in category_items 
        dt 
          a(href=item.url) #{item.name}
        dd(style="margin-left:10px") #{item.description}
      
      else 
        p This category has no items.
    
    hr(style="margin-top:100px;")
    p 
      a(href=category.url+"/update") Update Category
    p 
      a(href=category.url+"/delete") Delete Category